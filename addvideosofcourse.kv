MDScreen:
    name: "addvideosofcourse"
    MDFloatLayout:
        MDTopAppBar:
            md_bg_color: rgba(254,157,182,255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
        MDLabel:
            text: "  Add Videos"
            font_name: "DPoppins"
            font_size: "30sp"
            pos_hint: {"center_x":0.7,"center_y":0.94}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)
        MDIconButton:
            icon : "arrow-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(255,255,255,255)
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'viewvideostoadmin'

    MDBoxLayout:
        orientation: 'vertical'

        ScrollView:
            size_hint_y: None
            height: dp(500)

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
                spacing: dp(50)


                MDLabel:
                    text: "Lesson Name"
                    font_name: "DPoppins"
                    font_size: "25sp"
                    pos_hint: {"center_x":0.68,"center_y":0.8}
                    #theme_text_color: "Custom"
                    #text_color: rgba(222, 254, 237,255)

                MDTextField:
                    id: lessonname
                    hint_text: "Add Lesson's Name"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    #helper_text: "Lesson titles are displayed publicly\nwherever required."
                    #helper_text_mode: "on_error"
                    size_hint_x:0.85
                    mode: "rectangle"
                    multiline: "True"

                MDLabel:
                    text: "Lesson Description"
                    font_name: "DPoppins"
                    font_size: "20sp"
                    pos_hint: {"center_x":0.5,"center_y":0.8}
                    #theme_text_color: "Custom"
                    #text_color: rgba(222, 254, 237,255)
                MDTextField:
                    id: lessondescription
                    hint_text: "Add Description"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    #helper_text: "Lesson titles are displayed publicly\nwherever required."
                    #helper_text_mode: "on_error"
                    size_hint_x:0.85
                    mode: "rectangle"
                    multiline: "True"

                MDTextField:
                    id: videourl
                    hint_text: "Add Video URL"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    #helper_text: "YYYY/MM/DD"
                    #helper_text_mode: "on_error"
                    size_hint_x:0.85
                    mode: "rectangle"
                    multiline: "True"

                MDRaisedButton:
                    text: "SUBMIT"
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    size_hint_x:0.85
                    #size_hint_y:0.5
                    md_bg_color: rgba(254,157,182,255)
                    font_name: "DPoppins"
                    on_release:
                        app.submit_video(str(root.course_id))
                MDLabel:
                    text: ""