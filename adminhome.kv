#:include tinni2.kv
MDScreen:
    name : "adminhome"
    #md_bg_color: rgba(207, 205, 218,255)
    MDFloatLayout:

        MDFloatLayout:
            size_hint: 0.93, 0.08
            pos_hint: {"center_x":0.5, "center_y":0.9}
            canvas:
                Color:
                    rgba: (204/255, 199/255, 206/255,120/255)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30,30,30,30]
        MDFloatLayout:
            size_hint: 0.9, 0.07
            pos_hint: {"center_x":0.5, "center_y":0.9}
            canvas:
                Color:
                    rgb: (1,1,1,1)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30,30,30,30]
            TextInput:
                id: search
                hint_text: "Search"
                size_hint: 1,None
                pos_hint: {"center_x":0.5,"center_y":0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 254/255,157/255,182/255,1
                cursor_width: "2sp"
                foreground_color: 254/255,157/255,182/255,1
                background_color:0,0,0,0
                padding: 15
        MDIconButton:
            icon: "magnify"
            pos_hint: {"center_x":0.9, "center_y":0.9}
            md_bg_color: rgba(254,157,182,255)
            size_hint_y:  0.07
        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_y":0.48}
            size_hint_y:0.75

            ScrollView:

                #bar_color: [254,157,182, 1]
                #bar_width: 2

                MDList:
                    id: ourcourse_list
                    spacing: "20dp"
                    padding: "20dp"
                    #CardItem:
                    #CardItem1:
                    #CardItem2:
                    #CardItem3:
                    #CardItem4:
                    #CardItem5:

        MDFloatLayout:
            size_hint: 0.95, 0.1
            pos_hint: {"center_x":0.5, "center_y":0.06}
            canvas:
                Color:
                    rgba: (254/255,157/255,182/255,255/255)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [10]
            MDIconButton:
                icon: "home"
                pos_hint: {"center_x":0.2, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release:
                    root.manager.current = "adminhome"
            MDIconButton:
                icon: "bell"
                pos_hint: {"center_x":0.5, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
            MDIconButton:
                icon: "account"
                pos_hint: {"center_x":0.8, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
        MDFloatLayout:
            size_hint_x:0.2
            size_hint_y:0.1
            pos_hint: {"center_x":0.5, "center_y":0.145}
            canvas:
                Color:
                    #rgba: (254/255,157/255,182/255,0/255)
                Ellipse:
                    size: self.size
                    pos : self.pos
        MDFloatLayout:
            size_hint_x:0.18
            size_hint_y:0.095
            pos_hint: {"center_x":0.5, "center_y":0.146}
            canvas:
                Color:
                    rgba: (254/255,157/255,182/255,255/255)
                Ellipse:
                    size: self.size
                    pos : self.pos
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x":0.5, "center_y":0.145}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint: None,None
            size: "30dp","30dp"
            user_font_size: "48sp"  # Adjust the font size as needed
            icon_size: dp(40)
            on_release:
                root.manager.current = "addcourse"