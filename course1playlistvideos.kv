#:include tinni1.kv
MDScreen:
    name: "course1videos"
    MDFloatLayout:
        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_y":0.385}
            size_hint_y:1

            ScrollView:

                #bar_color: [254,157,182, 1]
                #bar_width: 2

                MDList:
                    id: course1_list
                    spacing: "20dp"
                    padding: "10dp"



        MDFloatLayout:
            size_hint: 0.9, 0.1
            pos_hint: {"center_x":0.5, "center_y":0.08}
            canvas:
                Color:
                    rgba: (254/255,157/255,182/255,235/255)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30]
            MDIconButton:
                icon: "home"
                pos_hint: {"center_x":0.2, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release:
                    root.manager.current = "studenthome"
            MDIconButton:
                icon: "view-list"
                pos_hint: {"center_x":0.5, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
            MDIconButton:
                icon: "account"
                pos_hint: {"center_x":0.8, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

        MDTopAppBar:
            md_bg_color: rgba(254,157,182,255)
            pos_hint: {"center_x":0.5,"center_y":0.95}
        MDLabel:
            text: "      Videos"
            font_name: "DPoppins"
            font_size: "30sp"
            pos_hint: {"center_x":0.7,"center_y":0.94}
            theme_text_color: "Custom"
            text_color: rgba(222, 254, 237,255)
        MDIconButton:
            icon : "arrow-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(255,255,255,255)
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'studenthome'
