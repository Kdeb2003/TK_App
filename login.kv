MDScreen:
    name: "login"
    MDFloatLayout:
        #md_bg_color: 186/255, 255/255, 255/255,1

        Image:
            source: "tkf-logo1.png"
            pos_hint: {"center_x":0.5,"center_y":0.9}
            size_hint: 0.5,0.5

        MDLabel:
            text : "Your Better Future\nis waiting..."
            font_name: "MPoppins"
            font_size : "20sp"

            pos_hint : {"center_x":0.58,"center_y": 0.75}

            color: rgba(0,0,72, 255)

        MDFloatLayout:
            size_hint: 0.9, 0.1
            pos_hint: {"center_x":0.5, "center_y":0.6}
            canvas:
                Color:
                    rgb: (238/255,238/255,238/255,1)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [15]
            TextInput:
                id: email
                hint_text: "Email"
                size_hint: 1,None
                pos_hint: {"center_x":0.5,"center_y":0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255,74/255,215/255,1
                cursor_width: "2sp"
                foreground_color: 96/255,74/255,215/255,1
                background_color:0,0,0,0
                padding: 15
        MDFloatLayout:
            size_hint: 0.9, 0.1
            pos_hint: {"center_x":0.5, "center_y":0.48}
            canvas:
                Color:
                    rgb: (238/255,238/255,238/255,1)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [15]
            TextInput:
                id: password
                hint_text: "Password"
                size_hint: 1,None
                pos_hint: {"center_x":0.5,"center_y":0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255,74/255,215/255,1
                cursor_width: "2sp"
                foreground_color: 96/255,74/255,215/255,1
                background_color:0,0,0,0
                padding: 15

        MDFlatButton:
            text: "LOGIN"
            size_hint_x:0.95
            pos_hint : {"center_x":0.5,"center_y":0.33}
            font_name: "MPoppins"
            md_bg_color: rgba(254, 157, 182,255)
            on_release:
                app.verify_login(email.text, password.text)
                #app.simulate_loading(None)

        MDTextButton:
            text: "Forgot Password?"
            pos_hint:{"center_x":0.5,"center_y":0.25}
            #size_hint:0.5,0.2
            color: rgba(68,78,132,255)
            font_size: "12sp"
            font_name: "BPoppins"
            on_release:
                root.manager.current = "studentprofile"
        MDLabel:
            text: "or"
            color: rgba(52,0,231,255)
            font_size : "13sp"
            pos_hint: {"center_x":0.98,"center_y":0.20}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint : 0.3, 0.002
            pos_hint: {"center_x" :0.3, "center_y": 0.198}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint : 0.3, 0.002
            pos_hint: {"center_x" :0.7, "center_y": 0.198}
        MDLabel:
            text: "Social Media Login"
            font_name : "BPoppins"
            font_size : "13sp"
            halign: "center"
            pos_hint: {"center_y": 0.16}
            color: rgba(135,133,193,255)
        MDGridLayout:
            cols:1
            size_hint: 0.48,0.07
            pos_hint: {"center_x":0.5,"center_y":0.1}
            Image:
                source: "7123025_logo_google_g_icon.png"
        MDLabel:
            text: "New user?"
            font_name : "BPoppins"
            font_size : "13sp"
            pos_hint :{"center_x": 0.78, "center_y": 0.04}
            color: rgba(0,0,200,255)
        MDTextButton:
            text: "Register->"
            size_hint: 0.5,0.01
            font_size : "13sp"
            pos_hint : {"center_x":0.78,"center_y":0.04}
            font_name: "MPoppins"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "selection"









