MDScreen:
    name: "selection"
    MDFloatLayout:
        #md_bg_color: 186/255, 255/255, 255/255,1
        md_bg_color: [1,1,1,1]
        MDIconButton:
            icon : "chevron-left"
            pos_hint : {"center_y" :0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color : rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'

        MDLabel:
            text : "Select to Continue"
            font_name: "MPoppins"
            font_size : "50sp"
            pos_hint : {"center_x":0.58,"center_y": 0.8}
            color: rgba(0,0,72, 255)
        MDFloatLayout:
            md_bg_color: rgba(0,0,0,255)
            size_hint : 0.9, 0.002
            pos_hint: {"center_x" :0.5, "center_y": 0.65}

        MDRaisedButton:
            text: 'User'
            pos_hint:{"center_x":0.5,"center_y":0.5}
            size_hint_x:0.95
            on_press:
                root.manager.current = "student registration"
        MDRaisedButton:
            text: 'Add User'
            pos_hint:{"center_x":0.5,"center_y":0.4}
            size_hint_x:0.95
            on_press:
                root.manager.current = "admin registration"









