#:include tinni.kv
MDScreen:
    name : "studenthome"
    #md_bg_color: rgba(207, 205, 218,255)
    MDFloatLayout:
        #MDCard:
        #    pos_hint:{"center_x":0.5,"center_y":1}
        #    size_hint: None, None
        #    size: 400,230
        #    md_bg_color: rgba(254,157,182,255)
        #    radius: [180]
        MDFloatLayout:
            size_hint_x:0.27
            size_hint_y:0.15
            pos_hint:{"center_x":0.2,"center_y":0.9}
            canvas:
                Color:
                    rgb: (1,1,1,1)
                Ellipse:
                    size: self.size
                    pos: self.pos
                    source: "profile1.png"
        MDLabel:
            text: "Welcome"
            pos_hint:{"center_x":0.85, "center_y":0.93}
            font_name  : "EPoppins"
            font_size: "30dp"
            theme_text_color: "Custom"
            text_color: rgba(254,157,182,255)
        MDLabel:
            text: "Govt. Job Aspirant"
            pos_hint:{"center_x":0.85, "center_y":0.88}
            font_name  : "EPoppins"
            font_size: "15dp"
            theme_text_color: "Custom"
            text_color: rgba(161, 172, 182,255)
        MDLabel:
            id: nameofuser
            text: "Kushal Deb"
            pos_hint:{"center_x":0.85, "center_y":0.83}
            font_name  : "EPoppins"
            font_size: "15dp"
            theme_text_color: "Custom"
            text_color: rgba(161, 172, 182,255)
        MDFloatLayout:
            size_hint: 0.915, 0.075
            pos_hint: {"center_x":0.5, "center_y":0.75}
            canvas:
                Color:
                    rgba: (141/255, 143/255, 155/255,120/255)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30,30,30,30]
        MDFloatLayout:
            size_hint: 0.93, 0.08
            pos_hint: {"center_x":0.5, "center_y":0.75}
            canvas:
                Color:
                    rgba: (204/255, 199/255, 206/255,120/255)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30,30,30,30]
        MDFloatLayout:
            size_hint: 0.9, 0.07
            pos_hint: {"center_x":0.5, "center_y":0.75}
            canvas:
                Color:
                    rgb: (1,1,1,1)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30,30,30,30]
            TextInput:
                id: search
                hint_text: "Search"
                size_hint: 1,None
                pos_hint: {"center_x":0.5,"center_y":0.5}
                height: self.minimum_height
                multiline: False
                cursor_color: 254/255,157/255,182/255,1
                cursor_width: "2sp"
                foreground_color: 254/255,157/255,182/255,1
                background_color:0,0,0,0
                padding: 15
        MDIconButton:
            icon: "magnify"
            pos_hint: {"center_x":0.9, "center_y":0.75}
            md_bg_color: rgba(254,157,182,255)
            size_hint_y:  0.07
        MDLabel:
            text: "Our Courses-->"
            pos_hint:{"center_x":0.55, "center_y":0.68}
            font_name  : "MPoppins"
            font_size: "20dp"
            theme_text_color: "Custom"
            text_color: rgba(112, 119, 126,255)
        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_y":0.27}
            size_hint_y:0.75

            ScrollView:

                #bar_color: [254,157,182, 1]
                #bar_width: 2

                MDList:
                    id: hula_list
                    spacing: "20dp"
                    padding: "20dp"
                    #CardItem:
                    #CardItem1:
                    #CardItem2:
                    #CardItem3:
                    #CardItem4:
                    #CardItem5:

        MDFloatLayout:
            size_hint: 0.9, 0.1
            pos_hint: {"center_x":0.5, "center_y":0.08}
            canvas:
                Color:
                    rgba: (254/255,157/255,182/255,235/255)
                RoundedRectangle:
                    size: self.size
                    pos : self.pos
                    radius: [30]
            MDIconButton:
                icon: "home"
                pos_hint: {"center_x":0.2, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release:
                    root.manager.current = "studenthome"
                    app.load_courses()
            MDIconButton:
                icon: "view-list"
                pos_hint: {"center_x":0.5, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
            MDIconButton:
                icon: "account"
                pos_hint: {"center_x":0.8, "center_y":0.47}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release:
                    app.display_student_details()
