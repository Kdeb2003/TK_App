#: include studentcard.kv
MDScreen:
    name: "student dashboard"
    MDFloatLayout:
        MDTopAppBar:
            pos_hint:{"center_x": 0.5, "center_y": 0.95}
            md_bg_color: rgba(255, 102, 153,)
            theme_text_color: "Custom"
            text_color: rgba(54, 6, 0, 255)
        MDLabel:
            text: "[b]Student Dashboard[/b]"
            pos_hint:{"center_x": 0.7, "center_y": 0.94}
            font_size: "21dp"
            markup:True

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_y":0.44}
        size_hint_y:0.9
        ScrollView:
            bar_color: [0, 0, 255, 1]
            bar_width: 3
            MDList:
                id: My_list
                CardItem1:

    MDFloatLayout:
        size_hint:0.9,0.1
        pos_hint:{"center_x":0.5,"center_y":0.08}
        canvas:
            Color:
                rgba: (254/255,157/255,182/255,235/255)
            RoundedRectangle:
                size:self.size
                pos: self.pos
                radius: [20]
        MDIconButton:
            icon : 'account'
            pos_hint:{"center_x": 0.87, "center_y": 0.5}
            on_press:
                root.manager.current = "Student Profile"
        MDIconButton:
            icon : 'home'
            pos_hint:{"center_x": 0.15, "center_y": 0.5}
            #on_release:
            #   root.manager.current = "Admin Dashboard"
        MDIconButton:
            icon : 'bell'
            pos_hint:{"center_x": 0.63, "center_y": 0.5}
        MDIconButton:
            icon : 'plus'
            pos_hint:{"center_x": 0.37, "center_y": 0.5}