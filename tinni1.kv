#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT
#:import Animation kivy.animation.Animation
<Spacer@Widget>
    size_hint_y: None
    height: "12dp"


<CourseItem@RelativeLayout>
    size_hint_y:None
    height:'80dp'
    MDCard:
        radius:[30]
        elevation: 3
        MDFloatLayout:
            MDFloatLayout:
                size_hint: None, None
                size: 380,97
                pos_hint: {"center_x":0.5,"center_y":0.5}
                canvas:
                    Color:
                        rgba: rgba(242,255,178,255)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30,30,30,30]
                MDLabel:
                    id: topicname
                    text: "Topic Name"
                    pos_hint: {"center_x":0.6,"center_y":0.6}
                    font_name: "MPoppins"
                    font_size: "15dp"
                    theme_text_color: "Custom"
                    text_color: rgba(98, 92, 97,255)
                MDLabel:
                    id: duration
                    text: "Duration"
                    pos_hint: {"center_x":0.6,"center_y":0.35}
                    font_name: "MPoppins"
                    font_size: "15dp"
                    theme_text_color: "Custom"
                    text_color: rgba(98, 92, 97,255)
                Image:
                    id: coursetopicthumbnail
                    source: "history vector.jpg"
                    pos_hint: {"center_x":0.8,"center_y":0.5}
                    size_hint:0.7,0.7


